<Window x:Class="WpfTestMailSender.WpfMailSender"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTestMailSender"
        mc:Ignorable="d"
        Title="Рассыльщик" Height="550" Width="600">
    <DockPanel Background="{StaticResource BackgroundKey}">

        <Menu Background="{StaticResource BackgroundKey}" Width="Auto" Height="30" DockPanel.Dock="Top" VerticalAlignment="Top">
            <MenuItem Header="Файл" Height="30">
                <MenuItem Header="Смена пользователя" Height="30"></MenuItem>
                <MenuItem Header="Выход" Height="30"></MenuItem>
            </MenuItem>
        </Menu>
        <TabControl Height="Auto">
            <TabItem Header="Формирование группы рассылки">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Планировщик">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Редактор писем">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Статистика">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>







    </DockPanel>
</Window>
