<Window x:Class="WpfTestMailSender.WpfMailSender"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTestMailSender"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="500">
    <Grid>
        
        <PasswordBox x:Name="passwordBox" Width="135" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button x:Name="btnSendEmail" Content="Отравить email" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Center" Width="135" Click="BtnSendEmail_Click"/>

    </Grid>
</Window>
