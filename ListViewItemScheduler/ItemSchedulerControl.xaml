<UserControl x:Class="ListViewItemScheduler.ItemSchedulerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ListViewItemScheduler"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d">
    <StackPanel x:Name="listViewItemControl" Orientation="Horizontal">
        <Button x:Name="btnEdit" Height="30" Margin="0 5 0 5" VerticalAlignment="Center" Content="Редактировать" Click="BtnEdit_Click" Style="{StaticResource AccentedSquareButtonStyle}" />
        <xctk:TimePicker x:Name="tbTimePicker" Height="25" Margin="5 5 5 5" Text="{Binding Time}" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" Width="150"/>
        <Button x:Name="btnDelete" VerticalAlignment="Center" Margin="0,0,5,0" Height="30" Style="{DynamicResource SquareButtonStyle}" Content="Удалить" Click="BtnDelete_Click" />

    </StackPanel>
</UserControl>
