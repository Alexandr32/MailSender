<Window x:Class="ListViewItemScheduler.WindowEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListViewItemScheduler"
        mc:Ignorable="d"
        Title="WindowEditDialog" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="textMail" TextWrapping="Wrap" Text="{Binding TextMail}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>
        <Button x:Name="save" Content="Сохранить" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" Click="Save_Click" />
        <Button x:Name="close" Content="Закрыть" Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" Click="Close_Click" />

    </Grid>
</Window>
